<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.lapsa.maven.pom</groupId>
		<artifactId>javaee7-app-parent</artifactId>
		<version>1.3.4</version>
	</parent>

	<groupId>com.lapsa.lapsa-lib</groupId>
	<artifactId>parent</artifactId>
	<version>1.1-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>Lapsa : Parent</name>

	<modules>
		<module>validation</module>
		<module>cdiutils</module>
		<module>arquilliantools</module>
		<module>velocitytools</module>
	</modules>

	<properties>
		<hibernate-validator.version>5.0.0.Final</hibernate-validator.version>
		<velocity.version>1.7</velocity.version>
		<velocity-tools.version>2.0</velocity-tools.version>
		<international-lib.version>2.0.1</international-lib.version>
	</properties>

	<dependencyManagement>
		<dependencies>
			<!-- own -->
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>lapsa-validation</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>lapsa-cdiutils</artifactId>
				<version>${project.version}</version>
			</dependency>
			<!-- internal -->
			<dependency>
				<groupId>com.lapsa.international-lib</groupId>
				<artifactId>international-core</artifactId>
				<version>${international-lib.version}</version>
			</dependency>
			<!-- external -->
			<dependency>
				<groupId>org.apache.velocity</groupId>
				<artifactId>velocity</artifactId>
				<version>${velocity.version}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.velocity</groupId>
				<artifactId>velocity-tools</artifactId>
				<version>${velocity-tools.version}</version>
			</dependency>
			<dependency>
				<groupId>org.hibernate</groupId>
				<artifactId>hibernate-validator</artifactId>
				<version>${hibernate-validator.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<scm>
		<connection>scm:git:https://gitrepo.theeurasia.kz/lapsa/lapsa-lib.git</connection>
		<developerConnection>scm:git:https://gitrepo.theeurasia.kz/lapsa/lapsa-lib.git</developerConnection>
		<tag>HEAD</tag>
	</scm>

	<issueManagement>
		<system>gitlab</system>
		<url>https://gitrepo.theeurasia.kz/lapsa/lapsa-lib/issues</url>
	</issueManagement>

</project>
